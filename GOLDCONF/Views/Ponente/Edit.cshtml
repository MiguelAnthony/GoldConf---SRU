<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

@{ var ponente = (Ponente)Model; }
<h1>Editar Ponente</h1>

<form action="/ponente/edit" method="post">

    <input type="hidden" name="Id" value="@ponente.Id" />
    <input type="hidden" name="Imagen" value="@ponente.Imagen" />

    <div class="form-group">
        <label>Nombres y Apellidos</label>
        <input type="text" class="form-control" placeholder="Nombres y Apellidos" name="NomApe" value="@ponente.NomApe"/>
        @Html.ValidationMessage("NomApe")
    </div>

    <div class="form-group">
        <label>Especialidad</label>
        <input type="text" class="form-control" placeholder="Especialidad" name="Especialidad" value="@ponente.Especialidad"/>
        @Html.ValidationMessage("Especialidad")
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Email" name="email" value="@ponente.Email"/>
        @Html.ValidationMessage("Email")
    </div>

    <div class="form-group">
        <label>Telefono</label>
        <input type="text" class="form-control" placeholder="Telefono" name="telefono" value="@ponente.Telefono"/>
        @Html.ValidationMessage("Telefono")
    </div>

    <div class="form-group">
        <label>Educación y Logros</label>
        <input type="text" class="form-control" placeholder="Educación y Logros" name="Logros" value="@ponente.Logros"/>
        @Html.ValidationMessage("Logros")
    </div>

    <div class="form-group">
        <label>Experiencia laboral</label>
        <input type="text" class="form-control" placeholder="Experiencia laboral" name="Experiencia" value="@ponente.Experiencia"/>
        @Html.ValidationMessage("Experiencia")
    </div>

    <button class="btn btn-primary">Aplicar</button>

</form>