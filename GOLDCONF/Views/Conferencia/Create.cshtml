<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
@{ var conferencia = (Conferencia)Model; }

<h1>Programar Conferencia</h1>

<div class="row">
    <div class="col-6 offset-3">
        <form action="/conferencia/create" enctype="multipart/form-data" method="post">

            <div class="form-group">
                Imagen
                <input type="file" class="form-control" name="Image" />

            </div>

            <div class="form-group">
                <label>Nombre de Conferencista</label>
                <select name="PonenteId" class="form-control" placeholder="Nombre">
                    <option value="">-- Selecciona una opcion --</option>
                    @foreach (var item in ViewBag.Ponentes)
                    {
                        <option value="@item.Id">@item.NomApe</option>
                    }
                </select>
                <p id="incorrect">@Html.ValidationMessage("NameConf")</p>
            </div>

            <div class="form-group">
                <label>Fecha</label>
                <input type="datetime-local" class="form-control" placeholder="Fecha" name="FechaConf" />
                <p id="incorrect">@Html.ValidationMessage("FechaConf")</p>
            </div>

            <div class="form-group">
                <label>Título de Conferencia</label>
                <input type="text" class="form-control" placeholder="Titulo" name="TituloConf" />
                <p id="incorrect">@Html.ValidationMessage("TituloConf")</p>
            </div>

            <div class="form-group">
                <label>Precio</label>
                <input type="number" class="form-control" placeholder="Precio" name="PrecioConf" />
                <p id="incorrect">@Html.ValidationMessage("PrecioConf")</p>
            </div>

            <div class="form-group">
                <label>Detalle de la Conferencia</label>
                <textarea type="text" name="DetalleConf" class="form-control"></textarea>
                <p id="incorrect">@Html.ValidationMessage("DetalleConf")</p>
            </div>

            <div class="form-group">
                <label>Aprendizajes de la conferencia</label>
                <input type="text" class="form-control" placeholder="Aprendizaje" name="Ap1" />
                <p id="incorrect">@Html.ValidationMessage("Ap1")</p>
                <input type="text" class="form-control" placeholder="Aprendizaje" name="Ap2" />
                <p id="incorrect">@Html.ValidationMessage("Ap2")</p>
                <input type="text" class="form-control" placeholder="Aprendizaje" name="Ap3" />
                <p id="incorrect">@Html.ValidationMessage("Ap3")</p>
            </div>

            <div class="form-group">
                <label>Definicion de la conferencia</label>
                <input type="text" class="form-control" placeholder="Definicion" name="Definicion" />
                <p id="incorrect">@Html.ValidationMessage("TituloConf")</p>
            </div>

            <div class="form-group">
                <label>Objetivo de la Conferencia</label>
                <input type="text" class="form-control" placeholder="Objetivo" name="Objetivo" />
                <p id="incorrect">@Html.ValidationMessage("TituloConf")</p>
            </div>

            <div class="form-group">
                <label>Meta final</label>
                <input type="text" class="form-control" placeholder="MetaFinal" name="MetaFinal" />
                <p id="incorrect">@Html.ValidationMessage("TituloConf")</p>
            </div>

            <button class="btn btn-primary">Registrar</button>

        </form>
    </div>
</div>